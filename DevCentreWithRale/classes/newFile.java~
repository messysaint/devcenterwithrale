    /** Creates new form saveYesNo */
    public newFile(mainForm parent, boolean modal) {
        super(parent, modal);
        initComponents();        
        main = parent;       
        fileName = parent.getTreeCurrentPath();        
        fileNameTextField.setText( fileName.substring( fileName.lastIndexOf( '\\' )+1 ) );
        basePath = fileName.substring( 0, fileName.lastIndexOf( '\\' )+1 );
    }
    
