    private void createButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_createButtonActionPerformed
        // Add your handling code here:
        String newServlet = newServletTextField.getText().trim();        
        String servletTemplate = new String( "generic" );
        
        if( newServlet.length() == 0 ) {
            return;
        } else {
            if( dbRadioButton.isSelected() ) {
                servletTemplate = "dbconnection";
            } else {
                servletTemplate = "generic";
            }
            newServlet = main.getBuildDirectory() + "\\classes\\" + newServlet + ".java";                 
            main.createServletTemplate( servletTemplate, newServlet );   
            if( new File( newServlet  ).exists() ) {
                main.editSourceCode( newServlet );
            }
        }
        
        setVisible(false);
        dispose();
    }//GEN-LAST:event_createButtonActionPerformed
    
