    private void nextButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_nextButtonActionPerformed
        // Add your handling code here:
        
        String projectBase = main.getBuildDirectory()+ "\\classes";
        
        setVisible(false);
        dispose();
        
        if( modelJavaBean.isSelected() ) {
            newModelJavaBean nmjb = new newModelJavaBean( main, true, projectBase );
            nmjb.show();
        } else if( modelJSP.isSelected() ) {
            main.printMessage( "model JSP" );
        } else if( viewJavaBean.isSelected() ) {
            main.printMessage( "view JavaBean" );
        } else if( viewJSP.isSelected() ) {
            main.printMessage( "view JSP" );
        } else if( html.isSelected() ) {
            main.printMessage( "html" );
        } else if( javaPackage.isSelected() ) {
            newPackage np = new newPackage( main, true, projectBase );
            np.show();
        } else {
            main.printMessage( "nothing is selected" );
        }
                
    }//GEN-LAST:event_nextButtonActionPerformed
    
