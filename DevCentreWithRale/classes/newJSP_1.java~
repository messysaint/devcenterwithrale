    private void createButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_createButtonActionPerformed
        // Add your handling code here:
        String newJSP = newJSPTextField.getText().trim();        
        String jspTemplate = new String( "generic" );
        
        if( newJSP.length() == 0 || getTreeCurrentPath().length() == 0 ) {
            return;
        } else {
            if( modelRadioButton.isSelected() ) {
                jspTemplate = "model";
            } else if( viewRadioButton.isSelected() ) {
                jspTemplate = "view";
            } else if( debugRadioButton.isSelected() ) {
                jspTemplate = "debug";
            } else if( errorRadioButton.isSelected()) {
                jspTemplate = "error";
            } else {
                jspTemplate = "generic";
            }
            newJSP = getTreeCurrentPath() + '\\' + newJSP + ".jsp";                 
            main.createJspTemplate( jspTemplate, newJSP);  
            if( new File( newJSP  ).exists() ) {
                main.editSourceCode( newJSP );
            }
            
        }
        
        setVisible(false);
        dispose();
    }//GEN-LAST:event_createButtonActionPerformed
    
