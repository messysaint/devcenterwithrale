/**
 *
 * @author  test1
 */
public class myRuntime extends java.lang.Runtime implements Runnable {
    
    /** Creates a new instance of myRunTime */
    Thread thread = new Thread( this );
    
    
    
    public void run() {
        
        while( true ) {
            while( true ) {
            try {         
                thread.sleep( 1000 );
            } catch( InterruptedException ie ) {
            }
        }
        }
        
    }
    
}
