    private void saveButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_saveButtonActionPerformed
        // Add your handling code here:
        String jarList = jarListTextArea.getText();
        StringTokenizer tokenizer = new StringTokenizer( jarList, "\n", false );
        String[] comments = new String[ tokenizer.countTokens() ];
        int i = 0;
        
        while( tokenizer.hasMoreTokens() ) {
            comments[ i++ ] = tokenizer.nextToken();
        }
        
        myParent.createConfigFile( mountedJar, comments );   
        
        setVisible(false);
        dispose();
    }//GEN-LAST:event_saveButtonActionPerformed
    
    private void removeButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_removeButtonActionPerformed
        // Add your handling code here:
        String jarFile = jarNameTextField.getText().trim();
        String jarList = jarListTextArea.getText();
        StringTokenizer tokenizer = new StringTokenizer( jarList, "\n", false );
        String newList = new String();
        String token = new String();
        int ctr = 0;
        
        if( jarFile.length() > 0 ) {
            while( tokenizer.hasMoreTokens() ) {
                ctr++;
                token = tokenizer.nextToken();
                if( !token.toLowerCase().endsWith( jarFile.toLowerCase() ) ) {
                    if( ctr == 1 ) {
                        newList += token;
                    } else {
                        newList += '\n' + token;
                    }
                }
            }
            jarListTextArea.setText( newList );
        }
        
    }//GEN-LAST:event_removeButtonActionPerformed
    
    private void addButtonActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_addButtonActionPerformed
        // Add your handling code here:
        String jarFile = jarNameTextField.getText().trim();
        File fromJar = new File( jarFile );
        
        if( jarFile.length() > 0 ) {
            if( fromJar.exists() ) {
                if( fromJar.isFile() ) {
                    if( jarFile.toLowerCase().endsWith( ".jar" ) ) {
                        if( jarListTextArea.getText().indexOf( jarFile ) == -1 ) {
                            jarListTextArea.append( '\n' + jarFile );
                        }
                    }
                }
            }
        }
        
    }//GEN-LAST:event_addButtonActionPerformed
    
